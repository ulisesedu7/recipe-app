<p style="color: green"><%= notice %></p>

<div class="page-title">
  <h1>
    <%= @recipe.name %>
  </h1>
</div>

<div class="recipe-details">

<%= render 'recipe-show' %>

<div class="generate-add-buttons">
<%= button_to "Generate shopping list", class: 'delete-btn'%>

<% if can? :manage, @recipe %>
  <%= link_to "Add ingredient", new_food_path(@recipe.id), class: 'delete-btn'%>
<% end %>

</div>

<hr>

<div>
  <%= link_to "Edit this recipe", edit_recipe_path(@recipe) %> |
  <%= link_to "Back to recipes", recipes_path %>

  </div>
</div>
